<launch>
  <arg name="anime_mode" default="False" />
  <node pkg="lqr_control" type="dareSolver.py" name="dare_solver" output="screen">
  </node>
  <node pkg="lqr_control" type="quadrotor_simulator_node" name="quadrotor_simulator" output="screen" >
    <param name="transform_movement_flag" value="true" />
    <param name="anime_mode" value="$(arg anime_mode)" />
    <param name="R_para" value="5.0" />
    <param name="Q_p_para" value="10.0" />
    <param name="Q_v_para" value="10.0" />
    <param name="Q_w_para" value="10.0" />
    <param name="Q_e_para" value="1.0" />
    <param name="Q_z_para" value="50.0" />
    <param name="start_x" value="10.0" />
    <param name="start_y" value="5.0" />
    <param name="start_z" value="3.0" />
    <param name="start_time" value="0.0" />
    <param name="end_x" value="12.0" />
    <param name="end_y" value="3.0" />
    <param name="end_z" value="6.0" />
    <param name="end_time" value="4.0" />
  </node>
  <group if="$(arg anime_mode)">
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lqr_control)/config/traj_anime_mode.rviz" />
    <include file="$(find hydrus)/launch/hydrusx/hydrusx_bringup.launch" >
      <arg name="real_machine" value="true" />
      <arg name="simulation" value="false" />
      <arg name="headless" value="true" />
      <arg name="control_mode" value="0" />
      <arg name="type" value="quad" />
    </include>
  </group>
</launch>
